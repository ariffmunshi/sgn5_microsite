---
import { Image } from "astro:assets";
import resourceImage from "../assets/images/resource-section/ndp.jpg";
---

<div class="resource-section">
	<div class="image-col">
		<Image src={resourceImage} alt="ndp" class="image-col-image" />
	</div>
	<div class="content-col">
		<div class="content-col-text">
			<h2>Celebrating National Day at home?</h2>
			<h4>From digital backdrops to printable table-top games and colouring pages, we have you covered.</h4>
		</div>
		<a class="button btn-secondary" href="#">Find out more</a>
	</div>
</div>

<style>
	.resource-section {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		background-color: var(--brand);
		padding: 3.25rem 2.5rem;
		border-radius: 0.5rem;
		width: 100%;
		gap: 2rem;
	}

	.resource-section h2,
	.resource-section h4 {
		color: var(--white);
	}

	.resource-section h2 {
		text-transform: none;
	}

	.resource-section h4 {
		line-height: 1.1;
	}

	.resource-section .image-col-image {
		height: 208px;
		width: 208px;
		border-radius: 0.5rem;
		border: 0.25rem solid var(--dark-grey);
	}

	.resource-section .content-col {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.resource-section .content-col .content-col-text {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.75rem;
	}

	.resource-section .content-col .button {
		padding: 1rem 1.5rem;
		min-width: 194px;
	}
</style>
