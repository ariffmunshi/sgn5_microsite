---
import { Image } from "astro:assets";
import SG60 from "../assets/images/sg60_logo.png";
import SGN from "../assets/images/layout/sgn_logo.svg";
import fb_i from "../assets/images/icons/facebook_icon.svg";
import ig_i from "../assets/images/icons/instagram_icon.svg";
import li_i from "../assets/images/icons/linkedin_icon.svg";
import x_i from "../assets/images/icons/x_icon.svg";
import tg_i from "../assets/images/icons/telegram_icon.svg";
import yt_i from "../assets/images/icons/youtube_icon.svg";
import tt_i from "../assets/images/icons/tiktok_icon.svg";
import wc_i from "../assets/images/icons/wechat_icon.svg";
---

<footer class="main-footer">
	<div class="footer">
		<Image src={SGN} class="sgn-logo" alt="SGN" />
		<Image src={SG60} class="sg60-logo" alt="SG60" />
		<div class="footer-icons">
			<a class="footer-icon" href="#">
				<Image src={fb_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={ig_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={li_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={x_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={tg_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={yt_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={tt_i} alt="Facebook Icon" />
			</a>
			<a class="footer-icon" href="#">
				<Image src={wc_i} alt="Facebook Icon" />
			</a>
		</div>
	</div>
	<div class="sgds footer">
		<div class="footer-mandatory-links">
			<ul>
				<li>
					<a href="https://tech.gov.sg/report_vulnerability" target="_blank" rel="noopener noreferrer"
						>Report Vulnerability</a
					>
				</li>
				<li>
					<a
						href="https://singaporeglobalnetwork.gov.sg/privacy-statement/"
						target="_blank"
						rel="noopener noreferrer">Privacy Statement</a
					>
				</li>
				<li>
					<a href="https://singaporeglobalnetwork.gov.sg/terms/" target="_blank" rel="noopener noreferrer"
						>Terms of use</a
					>
				</li>
			</ul>
		</div>
		<div class="footer-copyrights">
			<span>
				Â© 2025 Government of Singapore<br />
				Last Updated 21 July 2025
			</span>
		</div>
	</div>
</footer>

<style>
	.main-footer {
		display: flex;
		flex-direction: column;
	}

	/* SG@Home Custom Footer */
	.footer {
		display: flex;
		align-items: center;
		width: 100%;
		background-color: var(--dark-grey);
		padding: 1.5rem 2.5rem;
	}

	.sg60-logo {
		width: 2rem;
		height: 2rem;
		object-fit: cover;
		margin-left: 1.5rem;
	}

	.sgn-logo {
		width: 79px;
		height: 52px;
		object-fit: cover;
	}

	.footer-icons {
		display: flex;
		align-items: center;
		gap: 1.25rem;
		margin-left: auto;
	}

	a.footer-icon {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 2rem;
		height: 2rem;
		border-radius: 50%;
		background-color: var(--white);
	}

	/* WOG Footer */
	.sgds.footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background-color: #333333;
		font-size: 1rem;
	}

	.sgds.footer .footer-mandatory-links ul li {
		display: inline-block;
		margin-right: 15px;
	}

	.sgds.footer .footer-mandatory-links ul {
		padding-inline-start: 0;
	}

	.sgds.footer .footer-mandatory-links ul li:hover {
		filter: var(--sgds-secondary);
	}

	.sgds.footer .footer-mandatory-links ul li a {
		color: var(--sgds-primary);
		text-decoration: none;
	}

	.sgds.footer .footer-copyrights {
		color: var(--sgds-primary);
	}
</style>
