---
import { Image } from "astro:assets";
import navMenuClose from "../assets/images/layout/navmenu_close.svg";

// Navigation links
const navItems = [
	{ title: "Home", url: "/" },
	{ title: "Faces of Singapore", url: "/icons-of-sg" },
	{ title: "Dress to Impress", url: "/dress-to-impress" },
	{ title: "Quizzes and Games", url: "/games" },
	{ title: "Stories of Singapore", url: "/stories-of-singapore" },
	{ title: "National Day Resource Library", url: "/resource-library" },
];
const { pathname } = Astro.url;
---

<div class="main-menu collapse" id="navbar">
	<button class="button btn-secondary menu-button" data-my-toggle="collapse" data-my-target="#navbar">
		<p>Close</p>
		<Image src={navMenuClose} class="nav-menu-close" alt="Close" />
	</button>
	<nav>
		<ul class="nav-list">
			{
				navItems.map((item) => {
					const isActive = pathname === item.url || (item.url !== "/" && pathname.startsWith(item.url));

					return (
						<li class="list-item">
							<a href={item.url} class={isActive ? "active" : ""}>
								<span>{item.title}</span>
							</a>
						</li>
					);
				})
			}
		</ul>
	</nav>
</div>

<style>
	.main-menu {
		flex-direction: column;
		align-items: flex-end;
		background-color: var(--black);
		opacity: 0.8;
		padding: 3rem 2.5rem 1.5rem;
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		width: 100%;
		z-index: 100;
	}

	@media (max-width: 48rem) {
		.main-menu {
			padding: 4.75rem 1rem 1.5rem;
		}
	}

	.main-menu.collapse {
		display: block;
		transform: translateY(-100%);
		transition: transform 0.3s ease-in-out;
	}

	.main-menu.show {
		transform: translateY(0);
		transition: transform 0.3s ease-in-out;
	}

	.menu-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-left: auto;
		padding: 0.5rem 1rem;
		font-size: 1rem;
	}

	.nav-list {
		display: flex;
		flex-direction: column;
		padding-left: 0;
		text-align: right;
		list-style: none;
		gap: 1rem;
		margin: 0;
		padding-top: 3.5rem;
	}

	@media (max-width: 48rem) {
		.nav-list {
			gap: 2rem;
		}
	}

	.list-item > a {
		font-size: 4rem;
		color: var(--white);
		font-weight: 500;
		position: relative;
		padding-left: 3.5rem;
	}

	@media (max-width: 48rem) {
		.list-item > a {
			font-size: 2rem;
			gap: 2rem;
			padding-left: 0;
		}
	}

	.list-item > a::before {
		content: "â†ª";
		position: absolute;
		left: 0;
		opacity: 0;
		transition: opacity 0.25s ease;
	}

	@media (max-width: 48rem) {
		.list-item > a::before {
			content: none;
		}
	}

	.list-item > a.active {
		color: var(--primary);
	}

	.list-item > a.active span {
		text-decoration: underline;
	}

	.list-item > a:hover span {
		transform: translateX(1rem);
	}

	@media (max-width: 48rem) {
		.list-item > a:hover span {
			transform: translateX(0);
		}
	}

	.list-item > a:hover::before {
		opacity: 1;
	}

	.list-item > a span {
		display: inline-block;
		transform: translateX(0);
		transition: transform 0.25s ease;
	}
</style>
