---
import Carousel from "../components/Carousel.astro";
---

<div class="icons-top-section primary-light-bg">
	<div class="header-section">
		<h2>Faces of Singapore</h2>
		<h4>This SG60, we celebrate the people whose resilience and drive laid the foundation of our nation.</h4>
	</div>
	<div class="carousel-section">
		<Carousel />
	</div>
</div>

<style>
	.icons-top-section {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: space-between;
		padding: 3.25rem 2.375rem;
		border-radius: 0.5rem;
		width: 100%;
		gap: 2rem;
	}

	@media (max-width: 48rem) {
		.icons-top-section {
			padding: 2rem 1rem;
			gap: 0;
		}
	}

	.icons-top-section h2 {
		text-transform: none;
		line-height: 1;
	}

	.icons-top-section h4 {
		line-height: 1.1;
	}

	@media (max-width: 48rem) {
		.icons-top-section h2 {
			font-size: 2rem;
		}

		.icons-top-section h4 {
			font-size: 1rem;
		}
	}

	.icons-top-section .header-section {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: space-between;
		width: 100%;
		gap: 0.75rem;
	}

	.icons-top-section .carousel-section {
		display: flex;
		padding: 2.5rem 1.5rem;
		width: 100%;
	}
</style>
