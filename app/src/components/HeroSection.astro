---
import { Image } from "astro:assets";
import Sg60Logo from "../assets/images/SG_60_Logo_Home.svg";
const videoUrl = "https://d2yw6saf9y50ww.cloudfront.net/Connection.mp4";
---

<section class="hero-section">
  <video class="hero-bg-video" src={videoUrl} autoplay loop muted playsinline aria-label="Hero background video"></video>
  <div class="gradient-filter"></div>
  <Image src={Sg60Logo} alt="SG60 Logo" class="hero-logo" />
</section>

<style>
.hero-section {
  width: 100%;
  aspect-ratio: 16/9;
  position: relative;
  background: var(--dark-grey);
  overflow: hidden;
}

.hero-bg-video {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}

.gradient-filter {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0.6;
  background: linear-gradient(180deg, black 0%, rgba(0,0,0,0) 16%, rgba(0,0,0,0) 86%, black 100%);
  z-index: 2;
}

.hero-logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3; 
  width: 40%; 
  height: auto; 
  max-width: 80%;
}

@media (max-width: 48rem) { 
  .hero-section {
    aspect-ratio: 9/16; /* 9/16 instead of 16/9 as per requirement */
  }
  .hero-bg-video {
    object-fit: cover; 
  }
  .hero-logo {
    width: 85%; 
    max-width: 325px; 
  }
}

</style>