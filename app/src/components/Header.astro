---
import { Image } from "astro:assets";
import SG60 from "../assets/images/sg60_logo.png";
import SGN from "../assets/images/layout/sgn_logo.svg";
import navMenuIcon from "../assets/images/layout/navmenu_icon.svg";
---

<header class="main-header">
	<div class="header-logos">
		<Image src={SGN} class="sgn-logo" alt="SGN" />
		<Image src={SG60} class="sg60-logo" alt="SG60" />
	</div>
	<button class="button btn-secondary menu-button" data-my-toggle="collapse" data-my-target="#navbar">
		<p>Menu</p>
		<Image src={navMenuIcon} class="nav-menu-icon" alt="Menu" />
	</button>
</header>

<style>
	.main-header {
		display: flex;
		align-items: center;
		padding: 1.5rem 2.5rem;
		background-color: var(--dark-grey);
	}

	@media (max-width: 480px) {
		.main-header {
			padding: 3.25rem 1rem 1.5rem;
		}
	}

	.header-logos {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1.5rem;
	}

	.sgn-logo {
		width: 79px;
		height: 52px;
		object-fit: cover;
	}

	.sg60-logo {
		width: 2rem;
		height: 2rem;
		object-fit: cover;
	}

	.menu-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-left: auto;
		padding: 0.5rem 1rem;
		font-size: 1rem;
	}
</style>
