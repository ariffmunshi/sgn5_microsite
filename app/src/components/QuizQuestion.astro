---
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import '@fontsource-variable/dm-sans';
export interface Props {
  questionNumber: number;
  totalQuestions: number;
  questionText: string;
  options: string[];
  lottieFileUrl: string;
}
const {
  questionNumber,
  totalQuestions,
  questionText,
  options,
  lottieFileUrl,
} = Astro.props;
---


<div id="quiz-question-screen">
  <div class="quiz-container">
    <div id="question-lottie-wrapper">
      <LottieAnimation src={lottieFileUrl} 
      autoplay={true}
    />
    </div>

    <div class="question-counter">
      {questionNumber} of {totalQuestions}
    </div>

    <h1 class="question-text">
      {questionText}
    </h1>

    <div class="options-container">
      {options.map(text => (
        <button class="quiz-option">{text}</button>
      ))}
    </div>

    <button class="quiz-next-button" disabled>Next</button>
  </div>
</div>

<style>
  /* 
    CHANGE: All styles are now scoped under the #quiz-question-screen ID 
    to increase specificity and ensure they override defaults.
  */
  #quiz-question-screen .quiz-container {
    width: 100%;
    max-width: 42rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem; /* Add consistent spacing between all flex items */
  }
  
  #question-lottie-wrapper {
  width: 100%;
  }

  #quiz-question-screen .question-counter {
    background: #000;
    color: #fff;
    padding: 0.25rem 1rem;
    border-radius: 9999px;
    margin: 0; /* Remove all margins - let flex gap handle spacing */
    font-size: 0.875rem;
    font-weight: 600;
  }


  #quiz-question-screen .question-text {
    margin: 0; /* Remove default h1 margins */
    font-size: 1.5rem; /* Adjust as needed */
    font-weight: 700;
    font-family: "DM Sans Variable";
    text-align: center;
}

#quiz-question-screen .options-container {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
    justify-items: stretch;
    grid-template-columns: 1fr;
    align-items: stretch;
    min-width: 894px;
}

#quiz-question-screen .quiz-option {
    display: flex;
    padding: 24px;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border-radius: 8px;
    border: 4px solid var(--General-Off-Black, #222);
    color: var(--General-Off-Black, #222);
    text-align: center;
    font-family: "DM Sans Variable";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 140%; /* 28px */
    background: transparent;
    cursor: pointer;
    min-width: 194px;
    /* Prevent text wrapping and stretch to content */
    white-space: nowrap;
    min-width: 100%;
    box-sizing: border-box;
    align-self: : stretch;
}
  #quiz-question-screen .quiz-option:hover {
    background: #fef7c7;
  }
  #quiz-question-screen .quiz-option.selected {
    background: #FBBF24;
    border-color: #FBBF24;
  }
  #quiz-question-screen .quiz-option:active {
    background: #FBBF24;
    border-color: #FBBF24;
  }
  #quiz-question-screen .quiz-next-button {
  background-color: #FBBF24;
  color: #000;
  font-weight: 700;
  font-size: 1rem;
  padding: 0.75rem 3rem;
  border: none;
  border-radius: 0.75rem;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

#quiz-question-screen .quiz-next-button:hover {
  border-radius: 12px;
  background: black;
  color: white;
}

#quiz-question-screen .quiz-next-button:disabled {
  background-color: transparent;
  color: transparent;
  cursor: not-allowed;
}
@media all and (max-width: 500px) {
  #quiz-question-screen .quiz-container {
    display: flex;
    width: 350px;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }
#quiz-question-screen .question-text {
    color: var(--General-Off-Black, #222);
    text-align: center;
    font-family: "DM Sans Variable";
    font-size: 24px;
    font-style: normal;
    font-weight: 900;
    line-height: 100%; /* 24px */
    letter-spacing: -1.2px;
    align-self: stretch;
  }
  
  #quiz-question-screen .options-container {
    display: grid;
    gap: 12px;
    justify-items: stretch;
    grid-template-columns: 1fr;
    align-items: stretch;
    min-width: auto;
  }
#quiz-question-screen .quiz-option {
    display: flex;
    min-width: 194px;
    padding: 12px 16px;
    justify-content: center;
    align-items: center;
    gap: 8px;
    align-self: stretch;
    border-radius: 8px;
    border: 4px solid var(--General-Off-Black, #222);
    color: var(--General-Off-Black, #222);
    text-align: center;
    font-family: "DM Sans Variable";
    font-size: 16px;
    font-style: normal;
    font-weight: 600;
    line-height: 140%; /* 22.4px */
    flex: 1 0 0;
    box-sizing: border-box;
    /* Text wrapping fixes */
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
    white-space: normal; /* Allow text to wrap */
    min-height: auto
    height:100%;
  }
}
</style>

