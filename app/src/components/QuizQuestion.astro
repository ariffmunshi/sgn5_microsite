---
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
import '@fontsource-variable/dm-sans';
export interface Props {
  questionNumber: number;
  totalQuestions: number;
  questionText: string;
  options: string[];
  lottieFileUrl: string;
}
const {
  questionNumber,
  totalQuestions,
  questionText,
  options,
  lottieFileUrl,
} = Astro.props;
---


<div id="quiz-question-screen">
  <div class="quiz-container">
    <div id="question-lottie-wrapper">
      <LottieAnimation src={lottieFileUrl} 
      autoplay={true}
    />
    </div>

    <div class="question-counter">
      {questionNumber} of {totalQuestions}
    </div>

    <h1 class="question-text">
      {questionText}
    </h1>

    <div class="options-container">
      {options.map(text => (
        <button class="quiz-option">{text}</button>
      ))}
    </div>

    <button class="quiz-next-button" disabled>Next</button>
  </div>
</div>

<style>
  /* 
    CHANGE: All styles are now scoped under the #quiz-question-screen ID 
    to increase specificity and ensure they override defaults.
  */
  #quiz-question-screen .quiz-container {
    width: 100%;
    max-width: 42rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem; /* Add consistent spacing between all flex items */
  }
  
  #question-lottie-wrapper {
  width: 100%;
  }

  #quiz-question-screen .question-counter {
    background: #000;
    color: #fff;
    padding: 0.25rem 1rem;
    border-radius: 9999px;
    margin: 0; /* Remove all margins - let flex gap handle spacing */
    font-size: 0.875rem;
    font-weight: 600;
  }

  /* Add this missing style for the question text */
  #quiz-question-screen .question-text {
    margin: 0; /* Remove default h1 margins */
    font-size: 1.5rem; /* Adjust as needed */
    font-weight: 700;
    font-family: "DM Sans Variable";
  }
   #quiz-question-screen .options-container {
    display: grid; /* Changed from flex to grid */
    gap: 12px;
    /* width: 100%; */ /* Removed to allow container to size to content */
    /* flex-direction, justify-content, flex-wrap removed as they are flex properties */
    justify-items: stretch; /* Makes grid items (buttons) stretch to column width */
  }
  #quiz-question-screen .quiz-option {
    border-radius: 8px;
    border: 4px solid var(--General-Off-Black, #222);
    display: flex; /* For aligning content within the button (e.g., text) */
    padding: 24px;
    justify-content: center; /* Aligns text inside button */
    align-items: center;   /* Aligns text inside button */
    /* align-self: center; */ /* Removed - grid items stretch by default */
    gap: 8px;
    background: transparent;
    color: var(--General-Off-Black, #222);
    text-align: center;
    font-family: "DM Sans Variable";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 140%; /* 28px */
    white-space: nowrap; /* Ensures button width is based on text content */
    min-height: 80px; /* Consistent minimum height for all buttons */
    /* flex: 1; */ /* Removed - not needed for width in this grid context */
  }
  #quiz-question-screen .quiz-option {
    border-radius: 8px;
    border: 4px solid var(--General-Off-Black, #222);
    display: flex;
    padding: 24px;
    justify-content: center;
    align-items: center;
    align-self: center; /* Changed from stretch to center, allowing button width to fit content */
    gap: 8px;
    /* align-self: stretch; */ /* In a row, this would stretch height. flex:1 below handles width distribution. */
    background: transparent;
    color: var(--General-Off-Black, #222);
    text-align: center;
    font-family: "DM Sans Variable";
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 140%; /* 28px */
    white-space: nowrap; /* Prevents text wrapping */
    min-height: 80px; /* Consistent minimum height for all buttons */
    flex: 1; 
  }
  #quiz-question-screen .quiz-option:hover {
    background: #fef7c7;
  }
  #quiz-question-screen .quiz-option.selected {
    background: #FBBF24;
    border-color: #FBBF24;
  }
  #quiz-question-screen .quiz-option:active {
    background: #FBBF24;
    border-color: #FBBF24;
  }
  #quiz-question-screen .quiz-next-button {
  background-color: #FBBF24;
  color: #000;
  font-weight: 700;
  font-size: 1rem;
  padding: 0.75rem 3rem;
  border: none;
  border-radius: 0.75rem;
  cursor: pointer;
  transition: background-color 0.2s ease-in-out;
}

#quiz-question-screen .quiz-next-button:hover {
  border-radius: 12px;
  background: black;
  color: white;
}

#quiz-question-screen .quiz-next-button:disabled {
  background-color: transparent;
  color: transparent;
  cursor: not-allowed;
}
  
</style>

